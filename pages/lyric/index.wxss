.lyric-main {
  height: calc(100vh - 100rpx - 170rpx - 10rpx);
  background-color: powderblue;
  overflow: hidden;
  position: relative;
  overflow-y: scroll;
}
.lyric-main .lyric-value {
  width: 100%;
  padding-top: 50%;
  position: absolute;
  overflow-y: scroll;
  background-color: powderblue;
  padding-bottom: 100%;
  transition: 0.5s ease-in-out;
}
.lyric-main .lyric-value .lyric-text {
  height: 60rpx;
  font-size: 36rpx;
  color: #fff;
}
.lyric-main .music-download {
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  right: 60rpx;
  bottom: 190rpx;
  background-color: pink;
}
.progress-bar {
  width: 100%;
  position: absolute;
  position: fixed;
  bottom: 180rpx;
  height: 30rpx;
}
.progress-bar slider {
  margin: 0;
}
.min-assembly-body {
  position: absolute;
  bottom: 220rpx;
  height: 60rpx;
  width: 500rpx;
  position: fixed;
}
.min-assembly-body .min-assembly .collection {
  margin-left: 90rpx;
  color: #888;
  font-size: 46rpx;
}
.min-assembly-body .min-assembly .download {
  margin-left: 90rpx;
  color: #888;
  font-size: 46rpx;
}
.min-assembly-body .min-assembly .comment {
  margin-left: 90rpx;
  color: #888;
  font-size: 46rpx;
}
.music-play-Console {
  height: 170rpx;
  position: relative;
  bottom: 0;
  overflow: hidden;
  background-color: pink;
}
.music-play-Console .play-mode {
  flex: 2;
  background-color: #39c5bb;
  font-size: 46rpx;
}
.music-play-Console .back-music {
  flex: 2;
  background-color: #ccc;
  font-size: 70rpx;
}
.back-music:active {
  color: #66ccff;
  /* line-height: 200rpx; */
}
.music-play-Console .play-music {
  flex: 3;
  background-color: pink;
  font-size: 120rpx;
}
.play-music:active {
  color: #66ccff;
}
.music-play-Console .naxt-music {
  flex: 2;
  background-color: #ccc;
  font-size: 70rpx;
}
.naxt-music:active {
  color: #66ccff;
}
.music-play-Console .play-list {
  flex: 2;
  background-color: #39c5bb;
  font-size: 46rpx;
}
.play-list:active {
  color: #66ccff;
}
